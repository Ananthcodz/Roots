{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,

    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {
      "@org/shared-types": ["libs/shared-types/src/index.ts"],
    }
  }
}
